<script>
    var mamap = document.getElementById("mamap");
    mamap.addEventListener('click', function () {
        var mask = document.getElementById("mask");
        mask.className = "class1";
    });
    var home = document.getElementById("home");
    home.addEventListener('click', function () {
        var mask = document.getElementById("mask");
        mask.className = "class2";
    });
</script>
<!-- 地图 -->
<script>
    /* 底图 */
    require([
        "esri/Map",
        "esri/views/MapView",
        "esri/widgets/Compass",
        "esri/widgets/ScaleBar"
    ], function (Map, MapView, Compass, ScaleBar) {

        var map = new Map({
            basemap: "topo-vector"
        });

        var view = new MapView({
            container: "middle_right",
            map: map,
            center: [119.2384386100, 26.0828806300], // longitude, latitude
            zoom: 13
        });
        /* 坐标信息 */
        var coordsWidget = document.createElement("coordinate");
        coordsWidget.id = "coordsWidget";
        coordsWidget.className = "esri-widget esri-component";
        coordsWidget.style.padding = "7px 15px 5px";
        view.ui.add(coordsWidget, "bottom-right");
        /* 获取坐标函数 */
        function showCoordinates(pt) {
            var coords = "Lat/Lon " + pt.latitude.toFixed(3) + " " + pt.longitude.toFixed(3) +
                " | Scale 1:" + Math.round(view.scale * 1) / 1 +
                " | Zoom " + view.zoom;
            coordsWidget.innerHTML = coords;
        }
        /* 监听指针移动事件 */
        view.watch("stationary", function (isStationary) {
            showCoordinates(view.center);
        });

        view.on("pointer-move", function (evt) {
            showCoordinates(view.toMap({ x: evt.x, y: evt.y }));
        });
        /* 指南针 */
        var compass = new Compass({
            view: view
        });
        view.ui.add(compass, "top-left");
        /* 比例尺 */
        var scaleBar = new ScaleBar({
            view: view
        });
        view.ui.add(scaleBar, {
            position: "bottom-left"
        });
    });


</script>
